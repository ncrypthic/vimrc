{
    "languageserver":{
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", "gopkg.toml", "main.go"],
            "filetypes": ["go"]
        },
        "intelephense": {
            "command": "intelephense",
            "filetypes": ["php"],
            "rootPatterns": ["index.php", "composer.json"],
            "args": ["--stdio"],
            "initializationOptions": {
                "storagePath": "/tmp/intelephense"
            }
        },
        "metals": {
            "command": "metals-vim",
            "rootPatterns": ["build.sbt"],
            "filetypes":["scala","sbt"]
        }
    }
}
